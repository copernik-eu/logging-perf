<!DOCTYPE configuration>
<configuration>
    <import class="ch.qos.logback.classic.encoder.PatternLayoutEncoder"/>
    <import class="eu.copernik.logging.perf.logback.LogbackCountingAppender"/>
    <import class="net.logstash.logback.appender.LoggingEventAsyncDisruptorAppender"/>

    <appender name="COUNTING" class="LogbackCountingAppender">
        <encoder class="PatternLayoutEncoder">
            <!-- Should give exactly 218 bytes per log event -->
            <pattern>%d [%96t] %p %c - %m%n</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC" class="LoggingEventAsyncDisruptorAppender">
        <appendTimeout>-1</appendTimeout>
        <ringBufferSize>${benchmark.bufferSize}</ringBufferSize>
        <waitStrategyType>yielding</waitStrategyType>
        <appender-ref ref="COUNTING"/>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="ASYNC"/>
    </root>
</configuration>
